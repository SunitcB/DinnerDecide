<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newFoodText"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="202dp"
        android:src="@drawable/dd_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/foodNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Click &quot;Decide&quot; Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/decideBtn"
        style="@style/Widget.Material3.Button"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginBottom="-1dp"
        android:background="@drawable/buttonstyle"
        android:text="DECIDE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/addFoodText"
        android:layout_width="211dp"
        android:layout_height="75dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodNameTxt"
        tools:text="Add a new food item" />

    <Button
        android:id="@+id/addFoodBtn"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="202dp"
        android:layout_height="69dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="12dp"
        android:background="@color/appColor"
        android:backgroundTint="@color/appColor"
        android:text="Add Food"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addFoodText"
        app:rippleColor="#009688"
        app:strokeColor="#009688" />

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="#009688"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Dinner Decider"
        app:titleTextColor="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>